@model EditUserViewModel

@{
    ViewBag.Title = "Edit Standard User";
}

<form asp-controller="User" asp-action="Edit" method="post" class="container-fluid mt-3 p-1" style="width: 50%">
    <input hidden asp-for="Id"/>
    <input hidden asp-for="Activity"/>
    <input hidden asp-for="Type"/>
    <div class="form-group row">
        <label asp-for="ApplicationUser.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ApplicationUser.Email" class="form-control" placeholder="Email"/>
            <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ApplicationUser.FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ApplicationUser.FirstName" class="form-control" placeholder="FirstName"/>
            <span asp-validation-for="ApplicationUser.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ApplicationUser.LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ApplicationUser.LastName" class="form-control" placeholder="LastName"/>
            <span asp-validation-for="ApplicationUser.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
             <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Role" class="form-control">
                <option>User</option>
                <option>Admin</option>
                <option>NonActiveUser</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>

               <a asp-controller="User" asp-action="All" class="btn btn-primary">Cancel</a>

        </div>
    </div>
</form>


