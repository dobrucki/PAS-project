@model EditUserViewModel

@{
    ViewBag.Title = "Edit Vip User";
}
<form asp-controller="User" asp-action="EditVip" method="post" class="container-fluid mt-3 p-1" style="width: 50%">
    <div class="form-group row">
        <label asp-for="User.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Email" class="form-control" placeholder="Email"/>
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.FirstName" class="form-control" placeholder="FirstName"/>
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.LastName" class="form-control" placeholder="LastName"/>
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
    </div>

    <div id="dvString"
         class="form-group row">
        <label asp-for="User.PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           
            <input asp-for="User.PhoneNumber" value="" class="form-control" placeholder="Phone number"/>
            <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>

        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            
            <a asp-controller="User" asp-action="All" class="btn btn-primary">Cancel</a>

        </div>
    </div>
</form>


