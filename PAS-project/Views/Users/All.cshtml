@model IEnumerable<User>

@{
    ViewBag.Title = "Users";
}

<div class="container align-items-center pt-4">
    <div class="form-group row ">
        <a asp-controller="Users" asp-action="Create" class="nav-link">
        <button type="submit" class="btn btn-primary">Add User</button>
        </a>
    </div>
    <table class="table table-light table-hover">

        <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>User type</th>
            <th>Acces level</th>
            <th>Active</th>

        </tr>
        </thead>
        <tbody>

        @foreach (var user in Model)
        {
            <tr onclick="location.href = '@(Url.Action("User", "Users", new {user.Id}))'">
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserType</td>
                <td>@user.AccessLevel</td>
                <td>@user.Active</td>
            </tr>
        }
        </tbody>
    </table>
</div>

