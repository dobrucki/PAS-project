@model EditSeatViewModel


<form asp-controller="CinemaHall" asp-action="Edit" method="post" class="container-fluid mt-3 p-1" style="width: 50%">
    
    <input type="hidden" asp-for="SeatRow" value="@Model.Seat.Row">
    <input type="hidden" asp-for="SeatColumn" value="@Model.Seat.Column">
    <input type="hidden" asp-for="CinemaHallId" value="@Model.CinemaHall.Id">
    
    <div class="form-group row">
        <label asp-for="PlainComment" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PlainComment" class="form-control" placeholder="Comment" value="@Model.Seat.PlainComment"/>
            <span asp-validation-for="PlainComment" class="text-danger"></span>
        </div>
    </div>
    
    
    @if (Model.Seat.GetType() == typeof(CinemaHall.WideSeat))
    {
        var wideSeat = (CinemaHall.WideSeat) Model.Seat;
        
        <div class="form-group row">
            <label asp-for="ExtendedComment" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ExtendedComment" class="form-control" placeholder="Comment" value="@wideSeat.ExtendedComment"/>
                <span asp-validation-for="ExtendedComment" class="text-danger"></span>
            </div>
        </div>
    }
    
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>

</form>
