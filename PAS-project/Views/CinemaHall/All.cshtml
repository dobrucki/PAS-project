@model IEnumerable<CinemaHall>
@{
    ViewData["Title"] = "Cinema halls";
}

<div class="container list-group mt-4">
    @foreach (var cinemaHall in Model)
    {
        <a asp-controller="CinemaHall" asp-action="All" asp-route-id="@cinemaHall.Id"
           class="text-dark btn list-group-item d-flex justify-content-between align-items-center p-2 my-3">
            <div class="p-1">
                <div class="image-parent d-inline-block">
                    <img src="https://dummyimage.com/120x140/000/fff.png&text=CinemaHall" 
                         class="img-thumbnail" alt="cinema hall">
                </div>
                <h5 class="d-inline-block ml-3 px-2">@cinemaHall.Name</h5>
            </div>
            <h5 class="p-2">
                Lorem ipsum
            </h5>
        </a>
    }
</div>